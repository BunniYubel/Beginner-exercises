import random

Geometry, Algebra, Physics = (random.randint(0,10),
                              random.randint(0,10),
                              random.randint(0,10))
print(f"Geometry = {Geometry}, Algebra = {Algebra}, Physics = {Physics}")

Average = (Geometry + Algebra + Physics) / 3
print(f"Average = {Average}")

if Average < 4:
    print("Failed, you really need to work harder!")
elif Average <= 6:
    print("You need to work harder!")
else:
    print("Good job!")
